{
  "expo": {
    "name": "Lights Out Puzzle",
    "slug": "lights-out-puzzle-game",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "lightsoutgame",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "description": "Classic lights-out puzzle game with modern touch controls and satisfying haptic feedback.",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.lightsout"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.yourcompany.lightsout"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0f172a"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#fbbf24"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
